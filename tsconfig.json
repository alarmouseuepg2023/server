{
  "compilerOptions": {
    "lib": ["ES6"],
    "target": "ES2017",
    "module": "commonjs",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "rootDir": "./",
    "outDir": "./dist",
    
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    
    "baseUrl": ".",
    "paths": {
      "@NAMEHERE/*": ["./src/NAMEHERE/*"]
    }
  }
}
